CREATE OR REPLACE PACKAGE TABLEROS_PKG AS

    --Crea un nuevo tablero.
    PROCEDURE CREAR_TABLERO_PR(P_ID_TABLERO NUMBER, P_JUGADOR_1 VARCHAR2, P_JUGADOR_2 VARCHAR2);

    --Generar las letras por tablero.
    PROCEDURE GENERAR_LETRAS_PR(P_ID_TABLERO NUMBER);

    --Generar casillas por tablero.
    PROCEDURE GENERAR_CASILLAS_PR(P_ID_TABLERO NUMBER);

    --Inicializar letra - tablero.
    PROCEDURE INICIALIZAR_LETRA_PR(P_ID_TABLERO NUMBER, P_ID_LETRA VARCHAR2, P_CANTIDAD NUMBER);

    --Agregar bonus a casillas del tablero.
    PROCEDURE AGREGAR_BONUS_PR(P_ID_TABLERO NUMBER, P_X NUMBER, P_Y NUMBER, P_BONUS VARCHAR2);

    --Otorga letras al usuario hasta que 7.
    PROCEDURE OTORGAR_FICHAS_PR(P_ID_TABLERO NUMBER, P_ID_USUARIO VARCHAR2);

    --Validar palabra
    --NECESITAMOS RECIBIR UNA LISTA DE LETRAS Y SUS COORDENADAS
    PROCEDURE VALIDAR_PALABRA_PR(P_ID_TABLERO NUMBER, P_ID_USUARIO VARCHAR2, P_LETRAS VARCHAR2, P_PUNTOS OUT NUMBER);

    --Otorgar puntos
    PROCEDURE OTORGAR_PUNTOS_PR(P_ID_TABLERO NUMBER, P_JUGADOR VARCHAR2, P_PUNTOS NUMBER);

    --Exchange cambia una ficha por otra
    PROCEDURE EXCHANGE_PR(P_ID_TABLERO NUMBER, P_ID_USUARIO VARCHAR2, P_ID_LETRA VARCHAR2);

    --Eliminar la ficha de un jugador
    PROCEDURE ELIMINAR_LETRAS_PR(P_ID_TABLERO NUMBER, P_ID_USUARIO VARCHAR2, P_PALABRA VARCHAR2);

    --Incrementar las estad√≠sticas de los jugadores
    PROCEDURE INCREMENTAR_ESTADISTICA_PR(P_ID_USUARIO VARCHAR2, P_PARTIDAS_JUGADAS NUMBER, P_PARTIDAS_GANADAS NUMBER,
                                         P_PARTIDAS_PERDIDAS NUMBER);

    --Validar ganador del juego
    PROCEDURE VALIDAR_GANADOR_PR(P_ID_TABLERO NUMBER);

END TABLEROS_PKG;